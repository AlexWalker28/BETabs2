<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="52dp">

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/lessonNumber"
            android:layout_width="150dp"
            android:layout_alignParentStart="true"
            android:text="Number" />

        <TextView
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:id="@+id/lessonName"
            android:textColor="@color/colorText"
            android:layout_alignBaseline="@+id/lessonNumber"
            android:layout_alignBottom="@+id/lessonNumber"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/lessonNumber"
            android:text="Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lessonName"
            android:id="@+id/lessonAddress"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/lessonNumber"
            android:text="Address" />

    </RelativeLayout>

</LinearLayout>